<%= form_for(:user, url: admins_login_path, method: :post) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.hidden_field :admin, value: true %>

  <%= f.submit("Log in as Admin") %>
<% end %>

<%= link_to "Back to Main", root_path %>
